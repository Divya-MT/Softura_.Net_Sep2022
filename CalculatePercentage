using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Samplearrays
{
    public class CalculatePercentage
    {
        public static void Main()
        {
            int total = 0;
            int[] marks = new int[5];
            double per;

            Console.WriteLine("Enter Marks of each subject");
            for (int i = 0; i < 5; i++)
            {
                marks[i] = Convert.ToInt32(Console.ReadLine());
            }

            for (int i = 0; i < 5; i++)
            {
                total = total + marks[i];
            }

            per = (total * 100) / 500;
            Console.WriteLine("your Total Marks is {0}, and Percentage is {1}", total, per);
        }
    }
}
