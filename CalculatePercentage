using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Samplearray
{
    public class Array
    {
        public static async void Main()
        {
            int n, total=0, stdTotal;
            int[] marks=new int[50];
            double per;
             

            Console.WriteLine("Enter number of subjects");
             n = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter Standard total marks");
            stdTotal = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Enter Marks of each subject");
            for(int i=0;i<n;i++)
            {
                marks[i] = Convert.ToInt32(Console.ReadLine());
            }

            for (int i = 0; i < n; i++)
            {
                total = total + marks[i];
            }

            per = (total * 100) / stdTotal ;
            Console.WriteLine("your Total Marks is {0}, and Percentage is {1}",total,per);
            
        }
    }
}
