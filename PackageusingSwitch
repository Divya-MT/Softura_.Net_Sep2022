using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Samplearrays
{
    internal class Channelswitch
    {
        public static void Main()
        {
            Console.WriteLine("Package A, Package B, Package C");
            Console.WriteLine("select the channel package");
            string packageType = Console.ReadLine();
            switch (packageType.ToLower())
            {
               case "package a":
                    Console.WriteLine("1.South Special");
                     Console.WriteLine("2.Childer's Club");
                    Console.WriteLine("3.Movies");
                    Console.WriteLine("Rate:250");

                    break;
                case "package b":
                    Console.WriteLine("1.News");
                    Console.WriteLine("2.Sports");
                    Console.WriteLine("3.Movies");
                    Console.WriteLine("4.Regional");
                    Console.WriteLine("Rate:450");
                    break;
                case "package c":
                    Console.WriteLine("1.Discovery,History,Nation");
                    Console.WriteLine("Rate:350");

                    break;
            }
        }
    }
}
